import {{pascalCase format}}Formatter from './{{camelCase format}}'

describe('{{pascalCase format}}Formatter', () => {
  const mockColor = {
    data: { r: 50, g: 60, b: 70 },
    formatted: 'your-formatted-color',
  }

  it('should return the correct format', () => {
    expect({{pascalCase format}}Formatter.format(mockColor.data)).toEqual(mockColor.formatted)
  })

  it('should return the correct data when converting back to color data', () => {
    expect({{pascalCase format}}Formatter.toColorData(mockColor.formatted)).toEqual(
      mockColor.data
    )
  })

  it('should throw an error when converting an invalid formatted color', () => {
    expect(() => {{pascalCase format}}Formatter.toColorData('123')).toThrow()
  })
})
